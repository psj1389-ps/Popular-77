{
  "version": 2,
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": "dist",
  "headers": [
    {
      "source": "/rss.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/rss+xml; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "functions": {
    "api/rss.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/rss.xml", "destination": "/api/rss" },
    { "source": "/api/pdf-vector/(.*)", "destination": "https://pdf-vector.onrender.com/$1" },
    { "source": "/api/pdf-doc/(.*)", "destination": "https://pdf-doc-306w.onrender.com/$1" },
    { "source": "/api/pdf-jpg/(.*)", "destination": "https://pdf-jpg-jh3s.onrender.com/$1" },
    { "source": "/api/pdf-bmp/(.*)", "destination": "https://pdf-bmp.onrender.com/$1" },
    { "source": "/api/pdf-svg/(.*)", "destination": "https://pdf-svg.onrender.com/$1" },
    { "source": "/api/pdf-gif/(.*)", "destination": "https://pdf-gif.onrender.com/$1" },
    { "source": "/api/pdf-png/(.*)", "destination": "https://pdf-png.onrender.com/$1" },
    { "source": "/api/pdf-ai/(.*)", "destination": "https://popular-77.onrender.com/$1" },
    { "source": "/api/pdf-xls/(.*)", "destination": "https://pdf-xls.onrender.com/$1" },
    { "source": "/api/pdf-pptx/(.*)", "destination": "https://pdf-pptx.onrender.com/$1" },
    { "source": "/api/pdf-tiff/(.*)", "destination": "https://pdf-tiff.onrender.com/$1" },
    { "source": "/api/pdf-image/(.*)", "destination": "https://pdf-image-00tt.onrender.com/$1" },
    { "source": "/tools/(.*)", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}