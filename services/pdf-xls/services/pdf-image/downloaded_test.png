            if (e.target.tagName.toLowerCase() !== 'input') {
                document.getElementById('fileInput').click();
            }
        });

        document.getElementById('fileInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // íŒŒì¼ í¬ê¸° ì²´í¬
                if (file.size > 100 * 1024 * 1024) {
                    showError(`íŒŒì¼ í¬ê¸°ê°€ ë„ˆë¬´ í½ë‹ˆë‹¤: ${(file.size/1024/1024).toFixed(1)}MB (ìµœëŒ€ 100MB)`);
                    return;
                }
                
                selectedFile = file;
                document.getElementById('fileName').textContent = `íŒŒì¼ëª…: ${file.name}`;
                document.getElementById('fileSize').textContent = `í¬ê¸°: ${(file.size/1024/1024).toFixed(2)}MB`;
                document.getElementById('fileInfo').style.display = 'block';
                
                // PDF íŒŒì¼ì¸ ê²½ìš°ì—ë§Œ í˜•ì‹ ë° í’ˆì§ˆ ì˜µì…˜ í‘œì‹œ
                if (file.name.toLowerCase().endsWith('.pdf')) {
                    document.getElementById('formatOptions').style.display = 'block';
                    document.getElementById('sizeOptions').style.display = 'block';
                    document.getElementById('qualityOptions').style.display = 'block';
                    document.getElementById('transparentBgOptions').style.display = 'block';
                    updateCurrentSize(); // í˜„ì¬ í¬ê¸° ì—…ë°ì´íŠ¸
                } else {
                    document.getElementById('formatOptions').style.display = 'none';
                    document.getElementById('sizeOptions').style.display = 'none';
                    document.getElementById('qualityOptions').style.display = 'none';
                    document.getElementById('transparentBgOptions').style.display = 'none';
                }
                
                hideMessages();
            }
        });

        async function convertFile() {
            if (!selectedFile) return;
            
            const formData = new FormData();
            formData.append('file', selectedFile);
            
            // í’ˆì§ˆ ì„¤ì • ì¶”ê°€
            const quality = document.querySelector('input[name="quality"]:checked')?.value || 'medium';
            formData.append('quality', quality);
            
            // íŒŒì¼ í˜•ì‹ ì„¤ì • ì¶”ê°€
            const format = document.getElementById('formatSelect')?.value || 'jpg';
            formData.append('format', format);
            
            // íˆ¬ëª… ë°°ê²½ ì˜µì…˜ ì¶”ê°€
            const transparentBg = document.getElementById('transparentBg')?.checked || false;
            formData.append('transparentBg', transparentBg);
            
            // UI ì—…ë°ì´íŠ¸
            document.getElementById('convertBtn').disabled = true;
            document.getElementById('convertBtn').textContent = 'ë³€í™˜ ì¤‘...';
            document.getElementById('loading').style.display = 'block';
            hideMessages();
            
            console.log('ë³€í™˜ ìš”ì²­ ì‹œì‘:', selectedFile.name, 'í’ˆì§ˆ:', quality, 'í˜•ì‹:', format);
            
            fetch('/convert', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    
                    // ì„œë²„ ì‘ë‹µì—ì„œ íŒŒì¼ ì´ë¦„ ì •ë³´(í—¤ë”)ë¥¼ ì¶”ì¶œ
                    const disposition = response.headers.get('Content-Disposition');
                    let filename = `converted.${format}`; // ì„ íƒëœ í˜•ì‹ì— ë”°ë¥¸ ê¸°ë³¸ê°’
                    if (disposition && disposition.indexOf('attachment') !== -1) {
                        // filename*=UTF-8'' í˜•ì‹ ì²˜ë¦¬ (RFC 5987)
                        const filenameStarRegex = /filename\*=UTF-8''([^;\n]*)/;
                        const starMatches = filenameStarRegex.exec(disposition);
                        if (starMatches != null && starMatches[1]) {
                            filename = decodeURIComponent(starMatches[1]);
                        } else {
                            // ì¼ë°˜ filename í˜•ì‹ ì²˜ë¦¬
                            const filenameRegex = /filename[^;=\n]*=((['"]).*?\2|[^;\n]*)/;
                            const matches = filenameRegex.exec(disposition);
                            if (matches != null && matches[1]) {
                                filename = matches[1].replace(/['"]/g, '');
                            }
                        }
                    }
                    return response.blob().then(blob => ({ blob, filename }));
                })
                .then(({ blob, filename }) => {
                    // íŒŒì¼ ë‹¤ìš´ë¡œë“œ
                    const url = URL.createObjectURL(blob);
                    const link = document.createElement('a');
                    link.href = url;
                    // ìˆ˜ì •: ì„œë²„ê°€ ì•Œë ¤ì¤€ íŒŒì¼ëª…(filename)ì„ ê·¸ëŒ€ë¡œ ì‚¬ìš©
                    link.download = filename;
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                    
                    URL.revokeObjectURL(url);
                    
                    // ìˆ˜ì •: ë©”ì‹œì§€ì—ë„ ì˜¬ë°”ë¥¸ íŒŒì¼ëª…ì„ í‘œì‹œ
                    showSuccess(`ë³€í™˜ ì™„ë£Œ! ${filename} íŒŒì¼ì´ ë‹¤ìš´ë¡œë“œë©ë‹ˆë‹¤.`);
                })
                .catch(error => {
                    console.error('ë³€í™˜ ì˜¤ë¥˜:', error);
                    showError(error.message || 'ë³€í™˜ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.');
                })
                .finally(() => {
                    // UI ë³µì›
                    document.getElementById('convertBtn').disabled = false;
                    document.getElementById('convertBtn').textContent = 'ë³€í™˜í•˜ê¸°';
                    document.getElementById('loading').style.display = 'none';
                });
        }

        function resetFile() {
            selectedFile = null;
            document.getElementById('fileInput').value = '';
            document.getElementById('fileInfo').style.display = 'none';
            document.getElementById('formatOptions').style.display = 'none';
            document.getElementById('qualityOptions').style.display = 'none';
            document.getElementById('advancedOptions').style.display = 'none';
            document.getElementById('loading').style.display = 'none';
            document.getElementById('convertBtn').disabled = false;
            document.getElementById('convertBtn').textContent = 'ë³€í™˜í•˜ê¸°';
            
            // í’ˆì§ˆ ë° í˜•ì‹ ì„¤ì • ì´ˆê¸°í™”
            document.querySelector('input[name="quality"][value="medium"]').checked = true;
            document.getElementById('formatSelect').value = 'jpg';
            document.getElementById('transparentBg').checked = false;
            
            // ê³ ê¸‰ ì˜µì…˜ ì ‘ê¸°
            document.getElementById('advancedContent').style.display = 'none';
            document.getElementById('advancedToggleIcon').textContent = 'â–¶';
            
            hideMessages();
        }

        function showError(msg) {
            const errorDiv = document.getElementById('errorMsg');
            errorDiv.textContent = msg;
            errorDiv.style.display = 'block';
            document.getElementById('successMsg').style.display = 'none';
        }

        function showSuccess(msg) {
            const successDiv = document.getElementById('successMsg');
            successDiv.textContent = msg;
            successDiv.style.display = 'block';
            document.getElementById('errorMsg').style.display = 'none';
        }

        function hideMessages() {
            document.getElementById('errorMsg').style.display = 'none';
            document.getElementById('successMsg').style.display = 'none';
        }
        
        function toggleAdvancedOptions() {
            const content = document.getElementById('advancedContent');
            const icon = document.getElementById('advancedToggleIcon');
            
            if (content.style.display === 'none' || content.style.display === '') {
                content.style.display = 'block';
                icon.textContent = 'â–¼';
            } else {
                content.style.display = 'none';
                icon.textContent = 'â–¶';
            }
        }
        
        // í¬ê¸° ìŠ¬ë¼ì´ë” ê¸°ëŠ¥
        function updateSizeSlider(value) {
            document.getElementById('sizeValue').value = value;
            updateCurrentSize();
        }
        
        function updateCurrentSize() {
            const sizeMultiplier = parseFloat(document.getElementById('sizeSlider').value);
            const baseWidth = 443;
            const baseHeight = 591;
            const newWidth = Math.round(baseWidth * sizeMultiplier);
            const newHeight = Math.round(baseHeight * sizeMultiplier);
            document.getElementById('currentSize').textContent = `${newWidth}Ã—${newHeight} px`;
        }
        
        // ìŠ¬ë¼ì´ë” ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì¶”ê°€
        document.addEventListener('DOMContentLoaded', function() {
            const sizeSlider = document.getElementById('sizeSlider');
            if (sizeSlider) {
                sizeSlider.addEventListener('input', function() {
                    updateSizeSlider(this.value);
                });
                // ì´ˆê¸°ê°’ ì„¤ì •
                updateSizeSlider(sizeSlider.value);
            }
        });
        
        // íˆ¬ëª… ë°°ê²½ ë¼ë””ì˜¤ ë²„íŠ¼ ê¸°ëŠ¥
        function updateTransparentBg(value) {
            // ë¼ë””ì˜¤ ë²„íŠ¼ ê°’ì— ë”°ë¥¸ ì¶”ê°€ ì²˜ë¦¬ê°€ í•„ìš”í•œ ê²½ìš° ì—¬ê¸°ì— êµ¬í˜„
            console.log('íˆ¬ëª… ë°°ê²½ ì„¤ì •:', value);
        }
    </script>
